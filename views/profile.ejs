  <section class="site-section">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h2 class="mb-5">My Account</h2>
          <form  method="POST" action="/update">
            <div class="row">
              <div class="col-md-12 form-group">
                <!-- //<input type='hidden' name='id' value="<%=id %>" /> -->
                <label >Name</label>
                <input type="text" name="name" class="form-control" value="<%=name %>" >
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 form-group">
                <label >Phone </label>
                <input type="text" name="phone" class="form-control" value="<%=phone %>" >
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 form-group">
                <label >Date of Birth</label>
                <input type="date" name="dob" class="form-control" value="<%=dob %>" >
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 form-group">
                <label >City</label>
                <input type="text" name="city" class="form-control" value="<%=city %>" >
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 form-group">
                <label >Email</label>
                <input type="email" name="email" class="form-control " value="<%=email %>" >
              </div>
            </div>
            <!-- <a class="btn btn-success" href="/editProfile">Update</a> -->
            <input type="submit" value="Update" class="btn btn-success">
          </form>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-5">
              <h3 class="mb-5">An Enjoyable Experience</h3>
              <p class="mb-5"><img src="images/dental2.jpg" alt="" class="img-fluid"></p>
              <p>We offer top quality dental treatment & services for healthy and beautiful smiles. Let's book an appointment now</p>
            </div>
      </div>
    </div>
  </section>
