<section class="site-hero site-hero-innerpage overlay" data-stellar-background-ratio="0.5" style="background-image: url(images/big_image_1.jpg);">
    <div class="container">
      <div class="row align-items-center site-hero-inner justify-content-center">
        <div class="col-md-12 text-center">

          <div class="mb-5 element-animate">
            <h1>List Appointment</h1>
            <p>There is nothing more beautiful than a healthy smile.</p>
          </div>

        </div>
      </div>
    </div>
  </section>
  <!-- END section -->

  <section class="site-section">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2 class="mb-5">List of Appointment (Admin)</h2>
          
          <div class="table-content table-responsive">
            <table class="w3-table-all w3-centered">
                <thead>
                    <tr>
                        <th class="product-name">No</th>
                        <th class="product-name">Patient Name</th>
                        <th class="product-edit">Date</th>
                        <th class="product-price">Services</th>
                        <th class="product-price">Doctor in Charge</th>
                        <th class="product-quantity">Update</th>
                        <th class="product-quantity">Cancel</th>
                    </tr>
                </thead>
                <tbody>
                  
                  <% for(var i = 0; i < data.length; i++) { %>
                  <tr>
                    <td><%= i + 1 %></td>
                    <td><%= data[i].user_name %></td>
                    <td><%= data[i].bookDate %></td>                   
                    <td><%= data[i].services %></td>
                    
                    <td>
                      <form method="POST" action="/updateAdmin/<%=data[i]._id %>">
                        <input type="text" name="doctor" class="form-control" value='<%=data[i].doctor%>' >
                    </td>
                    <td>
                      <input type="submit" value="Update" class="btn btn-success">
                    </td> 
                  </form>
                    <td>
                      <a class="btn btn-success delete" href="/deleteAdmin/<%=data[i]._id%>">Cancel</a>
                            
                        </a>
                    </td>
                </tr>
                <% } %>
                    </tbody>
                </table>
            </div>
        </div>
      </div>
    </div>
  </section>
  <!-- END section -->

  
